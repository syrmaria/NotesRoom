<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.syrovama.notesroom">

    <application
        android:name="com.syrovama.notesroom.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.syrovama.notesroom.NotesListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.syrovama.notesroom.AddNoteActivity"/>
        <activity android:name="com.syrovama.notesroom.UpdateNoteActivity"/>
        <activity android:name="com.syrovama.notesroom.SettingsActivity"/>
    </application>

</manifest>